{
	"manifest_version": 3,
	"name": "Intelligent Paste",
	"version": "1.0",
	"description": "Intelligently maps clipboard content to form fields using AI",
	"permissions": [
		"activeTab",
		"clipboardRead",
		"storage",
		"commands",
		"contextMenus",
		"scripting"
	],
	"host_permissions": ["https://api.openai.com/v1/chat/completions"],
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"commands": {
		"intelligent-paste": {
			"suggested_key": {
				"default": "Alt+P",
				"mac": "Alt+P"
			},
			"description": "Run Intelligent Paste"
		}
	}
}
